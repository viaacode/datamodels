# ####################################
# SHAPES              #
# ####################################

# #####################
# NodeShapes     #
# #####################

<#ConstraintNodeShape> a sh:NodeShape ;
    sh:targetClass odrl:Constraint ;
    sh:property [ 
        sh:path odrl:rightOperand ;
        sh:in ( 
          :extended
          :limited
          :full
          :partial
          :available-for-consultation
          :downloadable
          :between-partners
          :educational-public
          :intra-muros
          :public
          :research-public 
        ) ; 
        sh:maxCount 1 ; 
        sh:minCount 1 ; 
        sh:nodeKind sh:IRI ; 
        sh:or ( [ sh:class :UserGroup ] 
                [ sh:class :MetadataRange ] 
                [ sh:class :ContentRange ] 
        )  
    ], 
    [ 
        sh:path odrl:operator ;
        sh:in ( odrl:eq odrl:lt ) ; 
        sh:maxCount 1 ; 
        sh:minCount 1 ; 
        sh:nodeKind sh:IRI  
    ], 
    [ 
        sh:path odrl:leftOperand ;
        sh:in ( odrl:recipient :metadataRange :contentRange odrl:dateTime odrl:absoluteTemporalPosition ) ; 
        sh:maxCount 1 ; 
        sh:minCount 1 ; 
        sh:nodeKind sh:IRI 
    ] .

<#MotivationNodeShape> a sh:NodeShape ;
  sh:targetClass :Motivation .

<#ProhibitionNodeShape> a sh:NodeShape ;
  sh:targetClass odrl:Prohibition ;
  sh:property <#ActionShape>, 
  <#ConstraintShape>, 
  <#NoteShape>, 
  <#StartDateShape>,
  <#EndDateShape>, 
  [ 
    sh:class :Motivation ; 
    sh:minCount 1 ; 
    sh:path :isMotivatedBy 
  ] .

<#PermissionNodeShape> a sh:NodeShape ;
  sh:targetClass odrl:Permission ;
  sh:property <#ActionShape>, 
  <#ConstraintShape>, 
  <#NoteShape>, 
  <#StartDateShape>,
  <#EndDateShape>.

<#PolicyNodeShape> a sh:NodeShape ;
  sh:targetClass odrl:Policy ;
  sh:property [ 
    sh:class haObj:DigitalRepresentation ; 
    sh:minCount 1 ; 
    sh:path odrl:target 
  ], 
  [ 
    sh:class odrl:Permission ; 
    sh:path odrl:permission 
  ], 
  [ 
    sh:class odrl:Prohibition ; 
    sh:path odrl:prohibition 
  ] .

<#DigitalRepresentationNodeShape> a sh:NodeShape ;
  sh:targetClass haObj:DigitalRepresentation;
  sh:property [ 
    sh:path odrl:hasPolicy ;
    sh:class odrl:Policy ; 
    sh:maxCount 1 ; 
    sh:nodeKind sh:IRI 
  ], 
  [ 
    sh:path dct:license ;
    sh:class premis:License ; 
    sh:maxCount 1 ;
    sh:nodeKind sh:IRI
  ], 
  [ 
    sh:path premis:rightsStatus ;
    sh:class premis:RightsStatus ; 
    sh:maxCount 3 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI 
  ] .

<#RightsStatementShape> a sh:NodeShape ;
  sh:targetClass dct:RightsStatement, skos:Concept .

<#LicenseShape> a sh:NodeShape ;
  sh:targetClass premis:License, skos:Concept .

<#RightsStatusShape> a sh:NodeShape ;
  sh:path premis:basis ;
  sh:targetClass premis:RightsStatus ;
  sh:property [ 
    sh:maxCount 1 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI ; 
    sh:or ( 
      [ sh:class dct:RightsStatement ] 
      [ sh:class premis:License ] 
    )  
  ], 
  <#NoteShape>, 
  <#EndDateShape>,
  <#StartDateShape> .

<#IntellectualEntityNodeShape> a sh:NodeShape ;
  sh:targetClass premis:IntellectualEntity ;
  sh:property [ 
    sh:path dct:license ;
    sh:class premis:License ; 
    sh:maxCount 1 ; 
    sh:nodeKind sh:IRI  
  ], 
  [ 
    sh:path dct:rights ;
    sh:class dct:RightsStatement ; 
    sh:maxCount 1 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI  
  ], 
  [ 
    sh:path premis:rightsStatus ;
    sh:maxCount 3 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI ; 
    sh:or ( 
      [ sh:class premis:RightsStatus ] 
      [ sh:class copyrightStatus:pub ] 
    )  
  ] .

# #####################
# PropertyShapes     #
# #####################

<#ActionShape> a sh:PropertyShape;
  sh:path odrl:action;
  sh:in ( :available-for-consultation :downloadable ) ; 
  sh:class odrl:Action;
  sh:nodeKind sh:IRI ;
  sh:minCount 1 .

<#ConstraintShape> a sh:PropertyShape;
  sh:path odrl:constraint ;
  sh:class odrl:Constraint ; 
  sh:nodeKind sh:IRI ;
  sh:maxCount 5 .

<#NoteShape> a sh:PropertyShape;
  sh:path premis:note ;
  sh:datatype xsd:string ; 
  sh:nodeKind sh:Literal ;
  sh:maxCount 1 .

<#EndDateShape> a sh:PropertyShape;
  sh:path premis:endDate ;
  sh:datatype xsd:dateTime ; 
  sh:nodeKind sh:Literal ;
  sh:maxCount 1 .

<#StartDateShape> a sh:PropertyShape;
  sh:path premis:startDate ;
  sh:datatype xsd:dateTime ; 
  sh:nodeKind sh:Literal ;
  sh:maxCount 1 .