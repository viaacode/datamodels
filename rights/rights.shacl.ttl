@prefix haPer: <https://data.hetarchief.be/id/permission/> .

@base <https://data.hetarchief.be/ns/rights> .

<> a owl:Ontology ;
    vann:preferredNamespacePrefix "haRig" ;
    vann:preferredNamespaceUri "http://data.hetarchief.be/ns/rights/" ;
    schema:author [ 
      a schema:Person ; 
      schema:name "Miel Vander Sande"@nl ; 
      schema:email "miel.vandersande@meemoo.be"
    ] ;
    dct:title "Data model Rights"@en ;
    dct:title "Modèle de données Droits"@fr ;
    dct:title "Datamodel Rechten"@nl ;
    dct:created "2025-09-10" ;
    dct:modified "2025-09-10" ;
    dct:description "Data model to describe rights and distribution policy."@en ;
    dct:description "Modèle de données pour décrire les droits et la politique de distribution."@fr ;
    dct:description "Datamodel om rechten en distributiebeleid te beschrijven."@nl ;
    pav:version "1.1.0" .

# ####################################
# SHAPES              #
# ####################################

# #####################
# NodeShapes     #
# #####################

<#ConstraintNodeShape> a sh:NodeShape ;
    sh:targetClass odrl:Constraint ;
    sh:property [ 
        sh:name "beperkingswaarde"@nl;
        sh:name "constraint value"@en;
        sh:name "valeur de contrainte"@fr;
        sh:path odrl:rightOperand ;
        sh:in ( 
         haRig:extended
         haRig:limited
         haRig:full
         haRig:partial
         haRig:available-for-consultation
         haRig:downloadable
         haRig:between-partners
         haRig:educational-public
         haRig:intra-muros
         haRig:public
         haRig:research-public
        ) ; 
        sh:maxCount 1 ; 
        sh:minCount 1 ; 
        sh:nodeKind sh:IRI ; 
        sh:or ( [ sh:class haRig:UserGroup] 
                [ sh:class haRig:MetadataRange ] 
                [ sh:class haRig:ContentRange ] 
        )  
    ], 
    [ 
        sh:path odrl:operator ;
        sh:name "operator"@en ;
        sh:name "operator"@nl ;
        sh:name "opérateur"@fr ;        
        sh:in ( odrl:eq odrl:lt ) ; 
        sh:maxCount 1 ; 
        sh:minCount 1 ; 
        sh:nodeKind sh:IRI  
    ], 
    [ 
        sh:path odrl:leftOperand ;
        sh:name "constraint name"@en ;
        sh:name "beperkingsnaam"@nl ;
        sh:name "nom de la contrainte"@fr ;
        sh:in ( odrl:recipient haRig:metadataRange haRig:contentRange odrl:dateTime odrl:absoluteTemporalPosition ) ; 
        sh:maxCount 1 ; 
        sh:minCount 1 ; 
        sh:nodeKind sh:IRI 
    ] .

<#MotivationNodeShape> a sh:NodeShape ;
  sh:targetClass haRig:Motivation .

<#ProhibitionNodeShape> a sh:NodeShape ;
  sh:targetClass odrl:Prohibition ;
  sh:property <#ActionShape>, 
  <#ConstraintShape>, 
  <#NoteShape>, 
  <#StartDateShape>,
  <#EndDateShape>, 
  [ 
    sh:path haRig:isMotivatedBy ;
    sh:name "is motivated by"@en;
    sh:name "wordt gemotiveerd door"@nl;
    sh:name "est motivé par"@fr;
    sh:class haRig:Motivation ; 
    sh:minCount 1 
  ] .

<#PermissionNodeShape> a sh:NodeShape ;
  sh:targetClass odrl:Permission ;
  sh:property <#ActionShape>, 
  <#ConstraintShape>, 
  <#NoteShape>, 
  <#StartDateShape>,
  <#EndDateShape>.

<#PolicyNodeShape> a sh:NodeShape ;
  sh:targetClass odrl:Policy ;
  sh:property [ 
    sh:path odrl:target;
    sh:name "target representation"@en;
    sh:name "doelrepresentatie"@nl;
    sh:name "représentation cible"@fr;
    sh:description "De digitale representatie waarop dit ontsluitingsbeleid van toepassing is."@nl;
    sh:description "The digital representation to which this access policy applies."@en;
    sh:description "La représentation numérique à laquelle s'applique cette stratégie d'accès."@fr;
    sh:class haObj:DigitalRepresentation ; 
    sh:minCount 1  
  ], 
  [ 
    sh:path odrl:permission;
    sh:name "ontsluitingstoestemming"@en;
    sh:name "access permission"@nl;
    sh:name "autorisation d'accès"@fr;
    sh:description "Een regel die meemoo toestemming verleent tot het ontsluiten van een digitale representatie."@nl;
    sh:description "A rule that grants meemoo permission to provide access to a digital representation."@en;
    sh:description "Une règle qui accorde à Meemoo l'autorisation de donner accès à une représentation numérique."@fr;
    sh:class odrl:Permission 
  ], 
  [ 
    sh:path odrl:prohibition;
    sh:name "ontsluitingsbeperking"@nl;
    sh:name "limitation of access"@en;
    sh:name "limitation de l'accès"@fr;
    sh:description "Een regel die meemoo beperkt in het ontsluiten van een digitale representatie."@nl;
    sh:description "A rule that restricts meemoo in providing access to a digital representation."@en;
    sh:description "Une règle qui restreint meemoo pour donner accès à une représentation numérique."@fr;
    sh:class odrl:Prohibition  
  ] .

<#DigitalRepresentationNodeShape> a sh:NodeShape ;
  sh:targetClass haObj:DigitalRepresentation;
  sh:property [ 
    sh:path odrl:hasPolicy ;
    rdfs:label "access policy"@en ;
    rdfs:label "ontsluitingspolicy"@nl ;
    rdfs:label "politique d'accès"@fr ;
    sh:description "Het ontsluitingsbeleid van deze digitale representatie die bestaat uit permissies en restricties."@nl;
    sh:description "The access policy of this digital representation that consists of permissions and restrictions."@en;
    sh:description "La politique d'accès de cette représentation numérique qui se compose d'autorisations et de restrictions."@fr;
    sh:class odrl:Policy ; 
    sh:maxCount 1 ; 
    sh:nodeKind sh:IRI 
  ], 
  [ 
    sh:path dct:license ;
    sh:name "condition for reuse"@en ;
    sh:name "hergebruikvoorwaarde"@nl ;
    sh:name "condition de réutilisation"@fr ;  
    sh:description "De voorwaarde(n) om deze digitale representatie te hergebruiken."@nl;
    sh:description "The condition(s) for reusing this digital representation."@en;
    sh:description "La(les) condition(s) de réutilisation de cette représentation numérique."@fr;
    sh:class premis:License ; 
    sh:maxCount 1 ;
    sh:nodeKind sh:IRI
  ], 
  [ 
    sh:path premis:rightsStatus ;
    sh:name "rights status"@en ;
    sh:name "rechtenstatus"@nl ;
    sh:name "statut de droit"@fr ;
    sh:description "De rechtenstatus van deze digitale representatie."@nl;
    sh:description "The rights status of this digital representation."@en;
    sh:description "Le statut des droits de cette représentation numérique."@fr;
    sh:class premis:RightsStatus ; 
    sh:maxCount 3 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI 
  ] .

<#RightsStatementShape> a sh:NodeShape ;
  sh:targetClass dct:RightsStatement, skos:Concept .

<#LicenseShape> a sh:NodeShape ;
  sh:targetClass premis:License, skos:Concept .

<#RightsStatusShape> a sh:NodeShape ;
  sh:targetClass premis:RightsStatus ;
  sh:property [ 
    sh:path premis:basis ;
    sh:name "has basis"@en ;
    sh:name "a une base"@fr ;
    sh:name "heeft basis"@nl ;
    sh:description "De rechtenverklaring of hergebruikvoorwaarde waarop deze rechtenstatus gebaseerd is."@nl;
    sh:description "The rights statement or reuse condition on which this rights status is based."@en;
    sh:description "La déclaration de droits ou la condition de réutilisation sur laquelle se base ce statut de droits."@fr;
    sh:maxCount 1 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI ; 
    sh:or ( 
      [ sh:class dct:RightsStatement ] 
      [ sh:class premis:License ] 
    )  
  ], 
  <#NoteShape>, 
  <#EndDateShape>,
  <#StartDateShape> .

<#IntellectualEntityNodeShape> a sh:NodeShape ;
  sh:targetClass premis:IntellectualEntity ;
  sh:property [
    sh:path dct:license ;
    sh:name "condition for reuse"@en ;
    sh:name "hergebruikvoorwaarde"@nl ;
    sh:name "condition de réutilisation"@fr ;
    sh:description "De voorwaarde(n) om deze intellectuele entiteit te hergebruiken."@nl;
    sh:description "The condition(s) for reusing this intellectual entity."@en;
    sh:description "La(les) condition(s) de réutilisation de cette entité intellectuelle."@fr;
    sh:class premis:License ; 
    sh:maxCount 1 ; 
    sh:nodeKind sh:IRI  
  ], 
  [ 
    sh:path dct:rights ;
    sh:name "rights statement"@en ;
    sh:name "rechtenverklaring"@nl ;
    sh:name "déclaration des droits"@fr ;
    sh:description "De verklaring die de auteursrechtelijke en hergebruikstatus van deze intellectuele entiteit duidt."@nl;
    sh:description "The statement indicating the copyright and reuse status of this intellectual entity."@en;
    sh:description "La déclaration indiquant le statut de droit d'auteur et de réutilisation de cette entité intellectuelle."@fr;
    sh:class dct:RightsStatement ; 
    sh:maxCount 1 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI  
  ], 
  [ 
    sh:path premis:rightsStatus ;
    sh:name "rights status"@en ;
    sh:name "rechtenstatus"@nl ;
    sh:name "statut de droit"@fr ;
    sh:description "De rechtenstatus van deze intellectuele entiteit."@nl;
    sh:description "The rights status of this intellectual entity."@en;
    sh:description "Le statut des droits de cette entité intellectuelle."@fr;
    sh:maxCount 3 ; 
    sh:minCount 1 ; 
    sh:nodeKind sh:IRI ; 
    sh:or ( 
      [ sh:class premis:RightsStatus ] 
      [ sh:class copyrightStatus:pub ] 
    )  
  ] .

# #####################
# PropertyShapes     #
# #####################

<#ActionShape> a sh:PropertyShape;
  sh:path odrl:action;
  sh:name "ontsluitingsactie"@nl;
  sh:name "access action"@en;
  sh:name "action d'accès"@fr;
  sh:description "De actie waarop de permissie of restrictie betrekking heeft."@nl;
  sh:description "The action to which the permission or restriction relates."@en;
  sh:description "L'action à laquelle se rapporte l'autorisation ou la restriction."@fr;
  sh:in ( haRig:available-for-consultation haRig:downloadable ) ; 
  sh:class odrl:Action;
  sh:nodeKind sh:IRI ;
  sh:minCount 1 .

<#ConstraintShape> a sh:PropertyShape;
  sh:path odrl:constraint ;
  sh:name "constraint"@en ;
  sh:name "beperking"@nl ;
  sh:name "contrainte"@fr ;
  sh:description "Een randvoorwaarde voor deze permissie of restrictie."@nl;
  sh:description "A precondition for this permission or restriction."@en;
  sh:description "Une condition préalable à cette autorisation ou restriction."@fr;
  sh:class odrl:Constraint ; 
  sh:nodeKind sh:IRI ;
  sh:maxCount 5 .

<#NoteShape> a sh:PropertyShape;
  sh:path premis:note ;
  sh:name "note"@en;
  sh:name "notitie"@nl;
  sh:name "note"@fr;
  sh:description "Een notitie of opmerking."@nl;
  sh:description "A note or comment."@en;
  sh:description "Une note ou un commentaire."@fr;
  sh:datatype xsd:string ; 
  sh:nodeKind sh:Literal ;
  sh:maxCount 1 .

<#EndDateShape> a sh:PropertyShape;
  sh:path premis:endDate ;
  sh:name "end date"@en ;
  sh:name "einddatum"@nl ;
  sh:name "fin"@fr ;
  sh:description "De datum waarop deze status of regel vervalt."@nl;
  sh:description "The date on which this status or rule expires."@en;
  sh:description "La date à laquelle ce statut ou cette règle expire."@fr;
  sh:datatype xsd:dateTime ; 
  sh:nodeKind sh:Literal ;
  sh:maxCount 1 .

<#StartDateShape> a sh:PropertyShape;
  sh:path premis:startDate ;
  sh:name "start date"@en ;
  sh:name "startdatum"@nl ;
  sh:name "date de début"@fr;
  sh:description "De datum waarop deze status of regel actief wordt."@nl;
  sh:description "The date on which this status or rule becomes active."@en;
  sh:description "Date à laquelle ce statut ou cette règle devient actif."@fr;
  sh:datatype xsd:dateTime ; 
  sh:nodeKind sh:Literal ;
  sh:maxCount 1 .